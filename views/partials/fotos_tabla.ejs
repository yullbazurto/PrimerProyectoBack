<main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
  <div class="table-responsive">
    <div class="table-wrapper mt-4">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2>Gestión de <b>Fotos</b></h2>
          </div>
          <div class="col-sm-6 text-end">
            <a href="#" class="btn btn-secondary">
              <i class="material-icons">&#xE147;</i> <span>Agregar Foto</span>
            </a>
            <a href="#" class="btn btn-secondary">
              <i class="material-icons">&#xE24D;</i> <span>Exportar Excel</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Tabla con datos reales desde Firebase -->
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Descripción</th>
            <th>URL</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% arrFotos.forEach((foto, idx) => { %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= foto.descripcion %></td>
              <td>
                <img src="<%= foto.url %>" alt="foto" width="20%" height="20%">
              </td>
              <td>
                <a href="#" class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="tooltip" title="Editar">
                  <i class="material-icons">&#xE8B8;</i>
                </a>
                <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Eliminar">
                  <i class="material-icons">&#xE5C9;</i>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="hint-text">Mostrando <b><%= arrFotos.length %></b> de <b>25</b></div>
        <ul class="pagination mb-0">
          <li class="page-item disabled"><a href="#" class="page-link">Anterior</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Próximo</a></li>
        </ul>
      </div>
    </div>
  </div>
</main>
